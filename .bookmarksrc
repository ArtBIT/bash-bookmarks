#!/bin/env bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
source "$SCRIPT_DIR/bookmarks"

bookmarks_run() {
    $(bookmarks "$@")
    exit_code=$?
    (exit $exit_code)
}
alias b="bookmarks_run"
alias be="b edit"
alias bo="b open"
alias ba="b add"
alias bd="b delete"
alias bp="b paste"

bcd() {
    cd "$(b "$@")"
}

